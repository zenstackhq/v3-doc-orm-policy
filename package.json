{
    "name": "quick-start",
    "private": true,
    "scripts": {
        "generate": "zen generate --schema basic/zenstack/schema.zmodel && zen generate --schema post-update/zenstack/schema.zmodel && zen generate --schema field-level/zenstack/schema.zmodel",
        "basic": "zen generate --schema basic/zenstack/schema.zmodel && tsx basic/main.ts",
        "post-update": "zen generate --schema post-update/zenstack/schema.zmodel && tsx post-update/main.ts",
        "field-level": "zen generate --schema field-level/zenstack/schema.zmodel && tsx field-level/main.ts",
        "dev": "npm run basic",
        "up": "npm i @zenstackhq/cli@latest @zenstackhq/orm@latest @zenstackhq/plugin-policy@latest"
    },
    "devDependencies": {
        "@types/node": "^24.1.0",
        "@types/sql.js": "^1.4.9",
        "@zenstackhq/cli": "^3.2.0",
        "tsx": "^4.20.3",
        "typescript": "^5.8.3"
    },
    "dependencies": {
        "@zenstackhq/orm": "^3.2.0",
        "@zenstackhq/plugin-policy": "^3.2.0",
        "sql.js": "^1.13.0"
    }
}
